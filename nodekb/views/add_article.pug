extends layout

block content
  h1 #{title}
  form(method='POST', action='/articles/add')
    div.form-group
      label Title:
      input.form-control(name='title', type='text')
    div.form-group
      label Body:
      textarea.form-control(name='body')
    br
    input(class='btn btn-primary', type='submit', value='Submit')